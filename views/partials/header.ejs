<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Artícora - Biblioteca Académica Colaborativa' %></title>
    
    <!-- Bootstrap 5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Estilos generales -->
    <link rel="stylesheet" href="/css/styles.css">
    
    <!-- Estilos específicos de página -->
    <% if (cssFile) { %>
        <link rel="stylesheet" href="/css/<%= cssFile %>">
    <% } %>
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">

    <!-- En partials/header.ejs, después de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        
    <style>
        /* Estilos adicionales para tipografía clásica */
        h1, h2, h3, h4, h5, h6, .display-1, .display-2, .display-3, .display-4, .display-5, .display-6 {
            font-family: 'Palatino Linotype', 'Book Antiqua', serif;
            font-weight: 700;
        }
        
        .navbar-brand, .card-header, .footer-heading {
            font-family: 'Palatino Linotype', 'Book Antiqua', serif;
        }
        
        /* Estilos para perfil de usuario */
        .user-profile {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .user-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: linear-gradient(to bottom, var(--gold-color), var(--secondary-color));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 14px;
        }
        
        .user-name {
            color: #e0d6c2;
            font-weight: 500;
        }
        
        .user-profile:hover .user-name {
            color: var(--gold-color);
        }
    </style>
</head>
<body>
    <!-- Barra de navegación estilo barra de biblioteca -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/" style="padding-right: 1em;">
                <i class="fas fa-university me-2"></i>
                <span>Artícora</span>
            </a>
            
            <!-- Barra de búsqueda en el header -->
            <form class="d-flex mx-3 flex-grow-1" action="/search" method="GET">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Buscar documentos, artículos..." name="q" value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
                    <button class="btn btn-outline-light" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>" href="/dashboard">
                            <i class="fas fa-home me-1"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentPage === 'lists' ? 'active' : '' %>" href="/lists">
                            <i class="fas fa-book-open me-1"></i> Colecciones
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentPage === 'faq' ? 'active' : '' %>" href="/faq">
                            <i class="fas fa-info-circle me-1"></i> Acerca de
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentPage === 'chat' ? 'active' : '' %>" href="/chat">
                            <i class="fas fa-comments me-1"></i> Chat
                        </a>
                    </li>
                    
                    <% 
                    // Variable hardcodeada para simular estado de sesión
                    // Cambia a false para ver el botón de inicio de sesión
                    const loggedIn = false; 
                    
                    // Nombre de usuario hardcodeado (aparece cuando loggedIn = true)
                    const userName = "Ana García";
                    const userInitials = "AG";
                    %>
                    
                    <% if (loggedIn) { %>
                        <!-- Perfil de usuario cuando está logueado -->
                        <li class="nav-item">
                            <a class="nav-link user-profile" href="/profile">
                                <div class="user-avatar">
                                    <%= userInitials %>
                                </div>
                                <span class="user-name d-none d-lg-inline"><%= userName %></span>
                                <i class="fas fa-chevron-down ms-1 d-none d-lg-inline"></i>
                            </a>
                        </li>
                    <% } else { %>
                        <!-- Botón dinámico de inicio de sesión/registro -->
                        <li class="nav-item ms-lg-2 mt-2 mt-lg-0">
                            <% 
                            // Determinar si estamos en la página de login
                            const isLoginPage = currentPage === 'login';
                            const dynamicHref = isLoginPage ? '/register' : '/login';
                            const dynamicText = isLoginPage ? 'Registrarse' : 'Iniciar Sesión';
                            const dynamicIcon = isLoginPage ? 'fa-user-plus' : 'fa-sign-in-alt';
                            const activeClass = (currentPage === 'login' || currentPage === 'register') ? 'active' : '';
                            %>
                            
                            <a class="nav-link btn btn-primary px-4 <%= activeClass %>" href="<%= dynamicHref %>">
                                <i class="fas <%= dynamicIcon %> me-1"></i> <%= dynamicText %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Contenido principal -->
    <main class="container py-5">